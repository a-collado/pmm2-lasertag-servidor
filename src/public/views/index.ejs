<!doctype html>
<html lang="es">
    <head>
        <meta charset="utf-8">
        <title>Slayser Tag</title>
        <link href="/favicon.ico" rel="icon" type="image/x-icon">
    </head>
    <body>
        <main> 
            <% if (current_state === "teams") { %>
                <h1>Elegir equipos:</h1>
                <ul id="devices_teams"></ul>
                <button type="button" onclick="setTeamsToScoreboard()">Quick Play</button>
                <button type="button" onclick="goToSettings()">Configure Game</button>
                <button type="button" onclick="goToDevices()">Go Back</button>
            <% } if (current_state === "connecting") { %>
                <h1>Dispositivos conectados:</h1>
                <ul id="devices_connecting"></ul>
                <button type="button" onclick="selectTeams()">Select Teams</button>
                <button type="button" onclick="">Free for all</button>
            <% } if (current_state === "scoreboard") { %>
                <h1>Puntuaciones:</h1> 
                <div>
                <h3>Team 1</h3>
                    <table id="scoreboad_team_1">
                        <tr>
                            <th>Name</th>
                            <th>Kills</th>
                            <th>Deaths</th>
                        </tr>
                    </table>
                    <h3>Team 2</h3>
                    <table id="scoreboad_team_2">
                        <tr>
                            <th>Name</th>
                            <th>Kills</th>
                            <th>Deaths</th>
                        </tr>
                    </table>
                </div>
            <button type="button" onclick="">Stop Game</button>
            <% } if (current_state === "settings") { %>
            <h1>Ajustes de la partida:</h1>
            <fieldset>
                <legend>Modo de juego:</legend>
                <input type="radio" id="time" name="gameMode" value="time" checked>
                <label for="time">Tiempo</label>
                <input type="radio" id="lifes" name="gameMode" value="lifes">
                <label for="lifes">Vidas</label>
            </fieldset>
            <fieldset id="time-options" style="display: block;">
                <legend>Tiempo:</legend>
                <input type="radio" id="time_5" name="time" value="time_5" checked>
                <label for="time_5">5 minutos</label>
                <input type="radio" id="time_10" name="time" value="time_10" checked>
                <label for="time_10">10 minutos</label>
                <input type="radio" id="time_15" name="time" value="time_15" checked>
                <label for="time_15">15 minutos</label>
            </fieldset>
            <fieldset id="lifes-options" style="display: none;">
                <legend>Vidas:</legend>
                <input type="radio" id="lifes_3" name="life" value="lifes_3" checked>
                <label for="lifes_3">3 vidas</label>
                <input type="radio" id="lifes_8" name="life" value="lifes_8" checked>
                <label for="lifes_8">8 vidas</label>
                <input type="radio" id="lifes_13" name="life" value="lifes_13" checked>
                <label for="lifes_13">13 vidas</label>
            </fieldset>
            <button type="button" onclick="saveSettings()">Continue with this settings</button>
            <button type="button" onclick="selectTeams()">Go Back</button>
            <% } %>
        </main>
        <script>
        const gameModeRadioButtons = document.querySelectorAll('input[name="gameMode"]');
        const timeOptions = document.getElementById('time-options');
        const lifesOptions = document.getElementById('lifes-options');

        gameModeRadioButtons.forEach(radioButton => {
            radioButton.addEventListener('change', () => {
            if (radioButton.value === 'time') {
                timeOptions.style.display = 'block';
                lifesOptions.style.display = 'none';
            } else if (radioButton.value === 'lifes') {
                timeOptions.style.display = 'none';
                lifesOptions.style.display = 'block';
            }
            });
        });
        </script>
        <script type="text/javascript" src="/js/funciones.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    </body>
</html>

