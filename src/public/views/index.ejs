<!doctype html>
<html lang="es">
    <head>
        <meta charset="utf-8">
        <title>Slayser Tag</title>
        <link href="/favicon.ico" rel="icon" type="image/x-icon">
    </head>
    <body>
        <main> 
            <% if (current_state === "teams") { %>
                <h1>Elegir equipos:</h1>
                <ul id="devices_teams"></ul>
                <button type="button" onclick="setTeams()">Quick Play</button>
                <button type="button" onclick="setTeams()">Configure Game</button>
                <button type="button" onclick="goToDevices()">Go Back</button>
            <% } if (current_state === "connecting") { %>
                <h1>Dispositivos conectados:</h1>
                <ul id="devices_connecting"></ul>
                <button type="button" onclick="selectTeams()">Select Teams</button>
                <button type="button" onclick="">Free for all</button>
            <% } if (current_state === "scoreboard") { %>
                <h1>Puntuaciones:</h1> 
                <div>
                <h3>Team 1</h3>
                    <table id="scoreboad_team_1">
                        <tr>
                            <th>Name</th>
                            <th>Kills</th>
                            <th>Deaths</th>
                        </tr>
                    </table>
                    <h3>Team 2</h3>
                    <table id="scoreboad_team_2">
                        <tr>
                            <th>Name</th>
                            <th>Kills</th>
                            <th>Deaths</th>
                        </tr>
                    </table>
                </div>
            <button type="button" onclick="">Stop Game</button>
            <% } %>
        </main>
        <script type="text/javascript" src="/js/funciones.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    </body>
</html>

